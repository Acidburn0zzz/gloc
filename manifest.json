{
  "manifest_version": 2,

  "name": "Github Gloc",
  "short_name": "Gloc",
  "author": "Artem Solovev",
  "description": "Extension counts the number of lines of code in GitHub pages.",
  "version": "6.0.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "index.html",
    "default_title": "Github Gloc"
   },

  "options_ui": {
    "page": "options.html"
  },

  "options_page": "options.html",

  "content_scripts": [{
    "matches": [
      "*://github.com/*"
    ],

    "js": [
      "js/jquery.min.js",
      "js/inject.js"
    ]
  }],

  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },

  "permissions": [
    "storage",
    "*://*.github.com/*"
  ],

  "icons": {
    "200": "img/icon.png"
  }
}