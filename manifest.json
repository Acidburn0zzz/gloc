{
    "manifest_version": 2,

    "name": "Gloc - github counter lines of code",
    "author": "Artem Solovev",
    "description": "Counts the number of lines of code of a project from github project page.",
    "version": "4.0.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "icons": {
        "200": "icon.png"
    },

    "content_scripts": [{
        "matches": ["*://github.com/*"],
        "js": ["inject.script.js"]
    }],

    "web_accessible_resources": [
        "main.js"
    ],

    "permissions": [
        "tabs",
        "activeTab",
        "<all_urls>",
        "https://ajax.googleapis.com/"
    ]
}